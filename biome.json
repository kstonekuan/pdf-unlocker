{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "files": {
    "maxSize": 10485760,
    "ignore": [
      ".next/**",
      "node_modules/**",
      "dist/**",
      "build/**",
      "out/**",
      "public/pdf.worker.min.mjs"
    ]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "ignore": [
      ".next/**",
      "node_modules/**",
      "dist/**",
      "build/**",
      "out/**",
      "public/pdf.worker.min.mjs"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "ignore": [
      ".next/**",
      "node_modules/**",
      "dist/**",
      "build/**",
      "out/**",
      "public/pdf.worker.min.mjs"
    ]
  }
}
